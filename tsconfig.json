{
    "compilerOptions": {
        "target": "ES2020",
        "allowJs": true,
        "module": "commonjs",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "outDir": "dist",
        "moduleResolution": "node",
        "typeRoots": ["./node_modules/@types"],
        "types": ["localforage", "jest", "node"]
    },
    "include": [
        "src/**/*"
    ]
}